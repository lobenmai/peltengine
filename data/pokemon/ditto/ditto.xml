<pokemon_data> <!-- data for one pokemon -->
    <anim_front>pokemon/ditto/anim.xml</anim_front> <!-- path to animation data for front -->
    <anim_back>pokemon/ditto/anim_back.xml</anim_back> <!-- path to animation data for back -->
	<!-- internal name of pokemon -->
	<name>ditto</name>
	<!-- proper name -->
	<show_name>Ditto</show_name>
	<!-- number of the pokemon -->
	<num>132</num>
	<!-- type of exp growth -->
	<exp>medfast</exp>
	<!-- species name -->
	<species>Transform</species>
	<type>normal</type>
	<pokedex> <!-- various pokedex metrics -->
		<height>12</height> <!-- height of pokemon in inches -->
		<weight>8.8</weight> <!-- weight of pokemon in pounds -->
		<desc>It can freely recombine its own cellular structure to transform into other life- forms.</desc>
		<color>purple</color>
		<num>132</num>
	</pokedex>
	<ability>
		<normal>limber</normal> <!-- various abilities -->
		<hidden></hidden>
	</ability>
	<catch>35</catch>
	<gender>-1</gender> <!-- likelihood of pokemon being male. if -1, pokemon is genderless -->
	<breed>
		<group>ditto</group> <!-- breeding group of pokemon -->
		<cycles>20</cycles> <!-- number of cycles necessary -->
	</breed>
	<base> <!-- base yield data -->
		<exp>61</exp>
		<!-- hp|atk|def|sp.atk|sp.def|speed -->
		<ev>1|0|0|0|0|0</ev> <!-- ev yield data -->
		<stats>48|48|48|48|48|48</stats>
	</base>
	<learnset> <!-- learnset of pokemon -->
		<level> <!-- moves learned at a specific level -->
			<!-- level at which move is learned + move id -->
			<move level="0">transform</move>
		</level>
		<!-- which TMs and HMs this pokemon can learn -->
		<tm></tm>
		<hm></hm>
	</learnset>
</pokemon_data>