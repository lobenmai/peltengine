<pokemon_data> <!-- data for one pokemon -->
    <anim_front>pokemon/diglett/anim.xml</anim_front> <!-- path to animation data for front -->
    <anim_back>pokemon/diglett/anim_back.xml</anim_back> <!-- path to animation data for back -->
	<!-- internal name of pokemon -->
	<name>diglett</name>
	<!-- proper name -->
	<show_name>Diglett</show_name>
	<!-- number of the pokemon -->
	<num>50</num>
	<!-- type of exp growth -->
	<exp>medfast</exp>
	<!-- species name -->
	<species>Mole</species>
	<type>ground</type>
	<pokedex> <!-- various pokedex metrics -->
		<height>8</height> <!-- height of pokemon in inches -->
		<weight>1.8</weight> <!-- weight of pokemon in pounds -->
		<desc>It burrows through the ground at a shallow depth. It leaves raised earth in its wake, making it easy to spot.</desc>
		<color>brown</color>
		<num>50</num>
	</pokedex>
	<ability>
		<normal>sand_veil</normal> <!-- various abilities -->
		<normal>arena_trap</normal> <!-- are chosen from at random when generated -->
		<hidden></hidden>
	</ability>
	<catch>255</catch>
	<gender>50</gender> <!-- likelihood of pokemon being male. if -1, pokemon is genderless -->
	<breed>
		<group>ground</group> <!-- breeding group of pokemon -->
		<cycles>20</cycles> <!-- number of cycles necessary -->
	</breed>
	<base> <!-- base yield data -->
		<exp>81</exp>
		<!-- hp|atk|def|sp.atk|sp.def|speed -->
		<ev>0|0|0|0|0|1</ev> <!-- ev yield data -->
		<stats>10|55|25|35|45|95</stats>
	</base>
	<learnset> <!-- learnset of pokemon -->
		<level> <!-- moves learned at a specific level -->
			<!-- level at which move is learned + move id -->
			<move level="0">sand-attack</move>
			<move level="0">scratch</move>
			<move level="5">growl</move>
			<move level="9">magnitude</move>
			<move level="17">dig</move>
			<move level="21">fury_swipes</move>
			<move level="25">mud-slap</move>
			<move level="33">slash</move>
			<move level="41">earthquake</move>
			<move level="49">fissure</move>
		</level>
		<!-- which TMs and HMs this pokemon can learn -->
		<tm></tm>
		<hm></hm>
	</learnset>
</pokemon_data>